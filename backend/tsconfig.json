{
	"compilerOptions": {
		"rootDir": "./src",
		"module": "ES2020",
		"esModuleInterop": true,
		"target": "ES2020",
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "./dist",
		"typeRoots": ["./node_modules/@types", "./types"],
		"skipLibCheck": true,
		"preserveConstEnums": true,
		"types": ["node"],
		"strict": false,
		"forceConsistentCasingInFileNames": true
	},
	"lib": ["es2020"],
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
}
